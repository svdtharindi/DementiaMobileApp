<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moccapage"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:text="" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/activity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity 1: Draw a Clock"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/task1Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Task 1 Score" />

        <TextView
            android:id="@+id/activity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity 2: Naming Animals"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/task2Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Task 2 Score" />

        <TextView
            android:id="@+id/activity3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity 3: Memory Recall"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/task3Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Task 3 Score" />

        <TextView
            android:id="@+id/activity4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity 4: Attention and Counting"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/task4Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Task 4 Score" />

        <TextView
            android:id="@+id/activity5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity 5: Language"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/task5Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Task 5 Score" />

        <TextView
            android:id="@+id/activity6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity 6: Abstraction"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/task6Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Task 6 Score" />



    </LinearLayout>
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Submit Scores" />


</LinearLayout>

